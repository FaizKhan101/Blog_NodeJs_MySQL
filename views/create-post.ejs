<%- include('includes/head') %>
    <link rel="stylesheet" href="/styles/create-post.css">

</head>
<body>
    <%- include('includes/header') %>
    <main>
        <form id="create-post" action="/create-post" method="POST">
            <h2>Add a New Post</h2>
            <div>
                <label for="title">Title</label>
                <input type="text" name="title" id="title" required>

                <label for="summary">Summary</label>
                <input type="text" name="summary" id="summary" required>
            </div>
            <div>
                <label for="content">Post Content</label>
                <textarea name="content" id="content" rows="5"></textarea>
            </div>
            <div>
                <label for="author">Select Author</label>
                <select name="author" id="author">
                    <% for (const author of authors) { %>
                        <option value="<%= author.id %>"><%= author.name %></option>
                    <% } %>
                </select>
                <a class="add-author" href="/authors/add">Add Author</a>
            </div>
            <div id="btn-area">
                <a href="/posts" class="btn ">Cancel</a>
                <button type="submit" class="btn">Add Post</button>
            </div>
        </form>
    </main>
</body>
</html>