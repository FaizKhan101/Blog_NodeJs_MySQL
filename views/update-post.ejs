<%- include('includes/head') %>
    <link rel="stylesheet" href="/styles/create-post.css">

</head>
<body>
    <%- include('includes/header') %>
    <main>
        <form id="create-post" action="/posts/<%= post.id %>/edit" method="POST">
            <h2>Update a Post</h2>
            <div>
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= post.title %>" required>

                <label for="summary">Summary</label>
                <input type="text" name="summary" id="summary" value="<%= post.summary %>" required>
            </div>
            <div>
                <label for="content">Post Content</label>
                <textarea name="content" id="content" rows="5"><%= post.body %></textarea>
            </div>
            
            <div id="btn-area">
                <a href="/posts" class="btn">Cancel</a>
                <button type="submit" class="btn">Update Post</button>
            </div>
        </form>
    </main>
</body>
</html>